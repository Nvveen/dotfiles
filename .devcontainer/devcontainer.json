{
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "foxundermoon.shell-format"
      ],
      "settings": {
        "dotfiles.repository": "",
        "terminal.integrated.defaultProfile.linux": "zsh"
      }
    }
  },
  "postCreateCommand": "cd /workspaces/dotfiles && bash setup.sh install --only-configs"
}